# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)

# Routes for the API
GET         /levy/*empref/declarations        controllers.ApiController.getLevyDeclarations(empref :EmpRef)
GET         /levy/:utr/schemes                controllers.ApiController.getSchemesForUtr(utr)

GET         /client                           controllers.ClientController.index

POST        /oauth2/access_token              controllers.OAuth2Controller.accessToken

GET         /client/login                     controllers.ClientController.showLogin
POST        /client/login                     controllers.ClientController.handleLogin