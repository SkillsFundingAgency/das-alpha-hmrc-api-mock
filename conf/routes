# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                                 controllers.Assets.versioned(path="/public", file: Asset)

GET        /                                                             controllers.api.UIController.index

# Routes for the API
GET        /apprenticeship-levy/epaye/empref/*empref/declarations        controllers.api.LevyDeclarationController.levyDeclarations(empref :EmpRef, months:Option[Int])

PUT        /auth/provide-token                                           controllers.api.AccessTokenController.provideToken