# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)

GET        /                                       controllers.api.UIController.index

# Routes for the API
GET        /epaye/*empref/levy-declarations        controllers.api.EpayeController.levyDeclarations(empref :EmpRef)
GET        /epaye                                  controllers.api.EpayeController.root

PUT        /epaye/provide-token                    controllers.api.AccessTokenController.provideToken