# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                 controllers.Assets.versioned(path="/public", file: Asset)

GET         /                                                             uk.gov.bis.controllers.admin.UIController.index
GET         /expire-token                                                 uk.gov.bis.controllers.admin.UIController.expireToken(token:String)
POST        /replace-declarations                                         uk.gov.bis.controllers.admin.UploadController.replaceDeclarations()

# Routes for the API
GET         /apprenticeship-levy/epaye/empref/*empref/declarations        uk.gov.bis.controllers.api.LevyDeclarationController.levyDeclarations(empref :EmpRef, months:Option[Int])

PUT         /auth/provide-token                                           uk.gov.bis.controllers.auth.AccessTokenController.provideToken

GET         /user-info                                                    uk.gov.bis.controllers.api.UserInfoController.userInfo